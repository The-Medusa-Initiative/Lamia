// Handle FCCP management actions
@api {
    @method "POST"
    @method "GET"
    
    @if @{request.action == "update_performance"} {
        @write_config "/ops/MedusaServ/cnf/fccp.conf" {
            @update_section "performance" {
                @set "buffer_size" @{request.buffer_size}
                @set "enable_zero_copy" @{request.zero_copy ? "true" : "false"}
                @set "enable_multipath" @{request.multipath ? "true" : "false"}
                @set "enable_kernel_bypass" @{request.kernel_bypass ? "true" : "false"}
            }
            @update_section "connection" {
                @set "connection_type" @{request.connection_type}
                @set "transfer_mode" @{request.transfer_mode}
                @set "max_connections" @{request.max_connections}
            }
        }
        @system_exec "sudo systemctl reload medusaserv"
        @redirect "?success=performance_updated"
    }
    
    @if @{request.action == "update_security"} {
        @write_config "/ops/MedusaServ/cnf/fccp.conf" {
            @update_section "security" {
                @set "max_file_size" @{request.max_file_size}
                @set "enable_path_traversal_protection" @{request.path_traversal_protection ? "true" : "false"}
            }
        }
        @redirect "?success=security_updated"
    }
    
    @if @{request.action == "restart_fccp"} {
        @system_exec "sudo systemctl restart medusaserv"
        @redirect "?success=fccp_restarted"
    }
    
    @if @{request.action == "auto_optimize"} {
        @fccp_auto_optimize_system
        @redirect "?success=auto_optimized"
    }
    
    @if @{request.action == "export_config"} {
        @system_exec "cp /ops/MedusaServ/cnf/fccp.conf /ops/MedusaServ/backups/fccp.conf.backup"
        @redirect "?success=config_exported"
    }
}